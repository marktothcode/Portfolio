<% include ../partials/portfolioheader.ejs %>
<link rel="stylesheet" href="/../stylesheets/main.css" type="text/css">

<div class="container">
    <div class="row">
<h1 style="text-align: center;">Edit <%=project.name%></h1>
<div style="width: 30%; margin: 25px auto;">

    <form action="/project-list/<%=project._id%>/?_method=PUT" method="POST">
        <div class="form-group">
        <input class="form-control" type="text" name="project[name]" value="<%=project.name%>">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="project[myImage]" value="<%=project.myImage%>">
        </div>
         <div class="form-group">
        <input class="form-control" type="text" name="project[stack]" value="<%=project.stack%>">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="project[description]" value="<%=project.description%>">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="project[pimage]" value="<%=project.pimage%>">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="project[link]" placeholder="<%=project.link%>">
        </div> 
        <div class="form-group">
        <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
        </div>
        
        
    
    </form>
    <a href="/project-list">Back to the Homepage</a> 
       
    
        </div>
    </div>
</div>
